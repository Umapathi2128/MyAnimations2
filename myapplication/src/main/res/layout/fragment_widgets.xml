<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.umapa.tapslayoutexample.Fragments.WidgetsFragment">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:scrollbars="none">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_margin="21dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Toggle Button"
             android:textSize="16sp"
             android:textColor="#936dcf"
             android:textAllCaps="false"
             android:fontFamily="@font/roboto_italic"
             android:layout_marginBottom="20dp"/>
         <ToggleButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Toggle Button"
             android:layout_marginBottom="20dp"
             android:fontFamily="@font/roboto_italic"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Switch"
             android:textSize="16sp"
             android:textColor="#936dcf"
             android:textAllCaps="false"
             android:fontFamily="@font/roboto_italic"
             android:layout_marginBottom="20dp"/>
         <Switch
             android:layout_width="120dp"
             android:layout_height="wrap_content"
             android:text="Switch"
                android:textSize="16sp"

             android:layout_marginBottom="20dp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Text Input Layout"
             android:textColor="#936dcf"
             android:textAllCaps="false"
             android:fontFamily="@font/roboto_italic"
             android:textSize="16sp"
             android:layout_marginBottom="20dp"/>
         <!--<android.support.design.widget.TextInputLayout-->
             <!--android:layout_width="match_parent"-->
             <!--android:layout_height="wrap_content"-->
             <!--android:layout_marginBottom="20dp">-->
             <!--<EditText-->
                 <!--android:layout_width="match_parent"-->
                 <!--android:layout_height="wrap_content"-->
                 <!--android:hint="edit text"/>-->
         <!--</android.support.design.widget.TextInputLayout>-->
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Check Box"
             android:textColor="#936dcf"
             android:textAllCaps="false"
             android:textSize="16sp"
             android:layout_marginBottom="20dp"
             android:fontFamily="@font/roboto_italic"/>
         <CheckBox
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="CheckBox1"
             android:fontFamily="@font/roboto_italic"
             android:layout_marginBottom="2dp"/>
         <CheckBox
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="CheckBox2"
             android:fontFamily="@font/roboto_italic"
             android:layout_marginBottom="2dp"/>
         <CheckBox
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="CheckBox3"
             android:fontFamily="@font/roboto_italic"
             android:layout_marginBottom="20dp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Radio Group and Radio Buttons"
             android:textColor="#936dcf"
             android:textAllCaps="false"
             android:fontFamily="@font/roboto_italic"
             android:layout_marginBottom="20dp"
             android:textSize="16sp"
            />
         <RadioGroup
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="20dp">
             <RadioButton
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="RadioButton1"
                 android:fontFamily="@font/roboto_mediumitalic"
                 android:layout_marginBottom="2dp"/>
             <RadioButton
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="RadioButton2"
                 android:fontFamily="@font/roboto_mediumitalic"
                 android:layout_marginBottom="2dp"
                 />
             <RadioButton
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="RadioButton3"
                 android:fontFamily="@font/roboto_mediumitalic"
                 android:layout_marginBottom="2dp"/>
         </RadioGroup>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Seek Bar"
             android:textColor="#936dcf"
             android:textAllCaps="false"
             android:textSize="16sp"
             android:layout_marginBottom="20dp"
             android:fontFamily="@font/roboto_italic"/>
         <SeekBar
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="20dp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Progress Bar"
             android:fontFamily="@font/roboto_italic"
             android:textColor="#7f46da"
             android:textAllCaps="false"
             android:textSize="16sp"
             android:layout_marginBottom="20dp"/>
         <ProgressBar
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:defaultFocusHighlightEnabled="true"
             android:scrollbars="horizontal"
             android:indeterminate="true"
             style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Spinner"
             android:fontFamily="@font/roboto_italic"
             android:textColor="#936dcf"
             android:textAllCaps="false"
             android:textSize="16sp"
             android:layout_marginBottom="20dp"/>
         <Spinner
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Date Picker"
             android:fontFamily="@font/roboto_italic"
             android:textColor="#936dcf"
             android:textAllCaps="false"
             android:textSize="16sp"
             android:layout_marginBottom="20dp"/>
         <DatePicker
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="20dp"></DatePicker>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Time Picker"
             android:fontFamily="@font/roboto_italic"
             android:textColor="#936dcf"
             android:textAllCaps="false"
             android:textSize="16sp"
             android:layout_marginBottom="20dp"/>
         <TimePicker
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="20dp" />

     </LinearLayout>
 </ScrollView>

</RelativeLayout>
